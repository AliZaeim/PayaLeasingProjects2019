@model IEnumerable<DynamicClassProj.Models.Test.Formula>

@{
    ViewBag.Title = "فرمول‌ها";
}

<h2 class="text-center alert alert-info">لیست فرمول‌ها</h2>

<p>
    @Html.ActionLink("ایجاد فرمول جدید", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>نام کلاس</th>
            <th>نام فیلد</th>
            <th>فرمول محاسباتی</th>
            <th>توضیحات</th>
            <th>عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.ClassName)</td>
                <td>@Html.DisplayFor(modelItem => item.FieldName)</td>
                <td>@Html.DisplayFor(modelItem => item.Expression)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    @Html.ActionLink("جزئیات", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
