@model IEnumerable<DynamicClassProject.Models.Entities.Formula>

@using DynamicClassProject.Utilities;
@{
    ViewBag.Title = "فرمول‌ها";
    <style>
        table td {
            font-size: 10px
        }
    </style>
}

<h2 class="text-center alert alert-info">لیست فرمول‌ها</h2>

<p>
    @Html.ActionLink("ایجاد فرمول جدید", "Create", null, new { @class = "btn btn-success" })
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th class="text-center">نام کلاس</th>
            <th class="text-center">نام فیلد</th>
            <th class="text-center w-25">فرمول محاسباتی</th>
            <th class="text-center">توضیحات</th>
            <th class="text-center">عملیات</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ClassName)
                    @{
                        (bool, string) Clsres = AppUtilities.GetClassDisplayText(item.ClassName);
                    }
                    @if (Clsres.Item1 == true)
                    {
                        <span><br /> @Clsres.Item2</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FieldName)
                    @{
                        (bool, string) res = AppUtilities.GetFieldDisplayName(item.ClassName, item.FieldName);

                    }
                    @if (res.Item1 == true)
                    {
                        <span> ==> @res.Item2</span>
                    }

                </td>
                <td>@Html.DisplayFor(modelItem => item.Expression)</td>
                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                <td>
                    @Html.ActionLink("جزئیات", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("ویرایش", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("حذف", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>
