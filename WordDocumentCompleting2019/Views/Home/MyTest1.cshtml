@model WordDocumentCompleting2019.Models.PersonModel

<h2>Personal Information Form</h2>

@using (Html.BeginForm("Preview", "Home", FormMethod.Post))
{
    @Html.ValidationSummary(true)

    <div class="form-group">
        @Html.LabelFor(m => m.Name)
        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Family)
        @Html.TextBoxFor(m => m.Family, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Family)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Age)
        @Html.TextBoxFor(m => m.Age, new { @class = "form-control", type = "number" })
        @Html.ValidationMessageFor(m => m.Age)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Father)
        @Html.TextBoxFor(m => m.Father, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Father)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Job)
        @Html.TextBoxFor(m => m.Job, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Job)
    </div>

    <button type="submit" class="btn btn-primary">Preview</button>
}