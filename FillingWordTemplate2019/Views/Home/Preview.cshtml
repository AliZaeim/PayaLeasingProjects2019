@model string

<h2>Document Preview</h2>
<div class="preview-container">
    @Html.Raw(Model)
</div>

@using (Html.BeginForm("Download", "Home"))
{
    <button type="submit" class="btn btn-success">Download Document</button>
}

<style>
    .preview-container {
        border: 1px solid #ddd;
        padding: 20px;
        margin-bottom: 20px;
        min-height: 500px;
    }
</style>